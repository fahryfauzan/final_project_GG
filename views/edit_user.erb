<body>
    <h1> Edit Profile</h1>
    <% user.each do |u| %>
        <form method="POST" action="/user/update/<%= u.id%>">
            <input type="hidden" name="_method" value="PUT">
            <input type="text" name="username" placeholder="Username" value="<%= u.username%>"><br><br>
            <input type="text" name="email" placeholder="email" value="<%= u.email%>"><br><br>
            <textarea name="bio" placeholder="BIO"><%= u.bio%></textarea><br>
    <% end %>
        <button type="submit">Update Profile</button>
    </form>
</body>